{
    "name": "Drive Button",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Open Google Drive",
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["background.js"],
	"persistent": false
    },
   "content_security_policy": "script-src 'self' https://ws.audioscrobbler.com; object-src 'self'", 
   "permissions": [
	"tabs",
	'downloads',
	"http://www.mrtzcmp3.net/*"
    ]
}
